<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:id="@+id/main"
    tools:context="kmitl.cs.s_project.GetNewPassword$PlaceholderFragment">

    <LinearLayout
        android:id="@+id/a"
        android:orientation="horizontal"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/user_mp"
            android:id="@+id/userImage"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/b"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/a"
        android:layout_centerHorizontal="true">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="user"
            android:textColor="#2980b9"
            android:id="@+id/userNameDisplay"
            android:textSize="18dp"
            android:gravity="center_horizontal"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="vertical"
        android:layout_alignParentBottom="true">
        <Button
            android:id="@+id/getNewPassButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#006666"
            android:alpha="0.5"
            android:textStyle="bold"
            android:textSize="17dp"
            android:textColor="@color/bright_foreground_inverse_material_light"
            android:text="รับรหัสผ่านทางอีเมล์"/>
    </LinearLayout>

</RelativeLayout>
